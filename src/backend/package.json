    "build:integration-service": "npm run build --workspace=integration-service",
    "build:load-matching-service": "npm run build --workspace=load-matching-service",
    "build:load-service": "npm run build --workspace=load-service",
    "build:market-intelligence-service": "npm run build --workspace=market-intelligence-service",
    "build:notification-service": "npm run build --workspace=notification-service",
    "build:optimization-engine": "npm run build --workspace=optimization-engine",
    "build:tracking-service": "npm run build --workspace=tracking-service",
