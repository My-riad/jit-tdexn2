    "dev:optimization-engine": "npm run dev --workspace=optimization-engine",
    "dev:tracking-service": "npm run dev --workspace=tracking-service",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:api-gateway": "npm run test --workspace=api-gateway",
    "test:auth-service": "npm run test --workspace=auth-service",
    "test:cache-service": "npm run test --workspace=cache-service",
    "test:data-service": "npm run test --workspace=data-service",
    "test:driver-service": "npm run test --workspace=driver-service",
    "test:event-bus": "npm run test --workspace=event-bus",
    "test:gamification-service": "npm run test --workspace=gamification-service",
    "test:integration-service": "npm run test --workspace=integration-service",
    "test:load-matching-service": "npm run test --workspace=load-matching-service",
    "test:load-service": "npm run test --workspace=load-service",
    "test:market-intelligence-service": "npm run test --workspace=market-intelligence-service",
    "test:notification-service": "npm run test --workspace=notification-service",
    "test:optimization-engine": "npm run test --workspace=optimization-engine",
    "test:tracking-service": "npm run test --workspace=tracking-service",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "prepare": "husky install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "clean": "rimraf **/dist **/node_modules"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
