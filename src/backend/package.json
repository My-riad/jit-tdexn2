    "start:notification-service": "npm run start --workspace=notification-service",
    "start:optimization-engine": "npm run start --workspace=optimization-engine",
    "start:tracking-service": "npm run start --workspace=tracking-service",
    "dev": "concurrently \"npm run dev:api-gateway\" \"npm run dev:auth-service\" \"npm run dev:load-service\" \"npm run dev:driver-service\" \"npm run dev:load-matching-service\" \"npm run dev:tracking-service\" \"npm run dev:gamification-service\" \"npm run dev:market-intelligence-service\" \"npm run dev:notification-service\" \"npm run dev:integration-service\" \"npm run dev:data-service\" \"npm run dev:event-bus\" \"npm run dev:cache-service\" \"npm run dev:optimization-engine\"",
